{
  "name": "@joshunrau/ui",
  "version": "0.1.0",
  "description": "Generic React Components and Tailwind Config",
  "keywords": [
    "UI",
    "React",
    "Tailwind"
  ],
  "homepage": "https://github.com/joshunrau/ui#readme",
  "bugs": {
    "url": "https://github.com/joshunrau/ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshunrau/ui.git"
  },
  "license": "MIT",
  "author": "Joshua Unrau",
  "type": "module",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./tailwind.config": "./tailwind.config.js"
  },
  "files": [
    "dist",
    "src/**/!(*.stories.tsx)",
    "tailwind.config.js"
  ],
  "scripts": {
    "build:dist": "bun build.js && tsc",
    "build:storybook": "storybook build",
    "dev": "bun build.js --watch",
    "format": "prettier --write src",
    "lint": "eslint --fix src",
    "push": "bun build:dist && npm publish",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@headlessui/tailwindcss": "^0.2.0",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/forms": "^0.5.6",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "tailwind-merge": "^1.14.0",
    "ts-pattern": "^5.0.5",
    "type-fest": "^4.3.3",
    "zustand": "^4.4.2"
  },
  "devDependencies": {
    "@joshunrau/eslint-config": "^3.1.1",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addon-themes": "^7.4.4",
    "@storybook/blocks": "^7.4.0",
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "@storybook/testing-library": "^0.2.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.15",
    "bun-types": "^1.0.2",
    "esbuild": "^0.19.4",
    "eslint": "^8.50.0",
    "postcss": "^8.4.29",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.4.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=3"
  },
  "publishConfig": {
    "access": "public"
  }
}